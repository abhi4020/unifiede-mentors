<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title || 'Student-Teacher Booking' %></title>
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/luxon@3/build/global/luxon.min.js" defer></script>
    <script src="/app.js" defer></script>
  </head>
  <body>
    <a href="#main" class="sr-only">Skip to content</a>
    <header class="site-header">
      <div class="container topbar">
        <div class="brand">
          <a href="/" style="color:inherit;text-decoration:none;display:flex;align-items:center;gap:.6rem">
            <svg width="36" height="36" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect width="24" height="24" rx="6" fill="rgba(255,255,255,0.12)"/><path d="M8 12h8M8 8h8M8 16h5" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <h1>Student-Teacher</h1>
          </a>
        </div>
        <button type="button" class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false" aria-controls="main-nav">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <nav id="main-nav" class="site-nav" aria-label="Main navigation">
          <a href="/">Teachers</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
          <a href="/bookings">Bookings</a>
          <button id="theme-toggle" type="button" aria-label="Toggle theme" aria-pressed="false" class="btn secondary">Theme</button>
          <% if (locals.currentUser) { %>
            <% const parts = (locals.currentUser.name || '').split(' '); const initials = (parts[0]?parts[0][0]:'') + (parts[1]?parts[1][0]:''); %>
            <div class="avatar-section">
              <div style="display:flex;align-items:center;gap:.6rem">
                <div class="avatar"><%= initials.toUpperCase() %></div>
                <span style="color:rgba(255,255,255,0.95);font-weight:600"><%= locals.currentUser.name %></span>
              </div>
              <form method="post" action="/logout"><button class="btn secondary" type="submit">Logout</button></form>
            </div>
          <% } else { %>
            <a href="/login">Login</a>
            <a href="/register">Register</a>
          <% } %>
        </nav>
      </div>
    </header>
    <main class="container">
